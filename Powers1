package squarescubespowers;

import java.util.Scanner;
import java.lang.Math;
/**
 *
 * @author Jeffrey
 */
public class SquaresCubesPowers {
    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // Author: Jeffrey
        // Date: 14 July 2021
        // Program Name: SquaresCubesPowers
        // Purpose: Create a program that gives the user options to square or cube a number, or choose their own base and power or quit the program.
        // Allows program to get user input
        Scanner keyedInput = new Scanner(System.in);
        // Variables to keep track of which equation the user would want to run and runs it based on their input
        int userOption = 0;
        int progStatus = 0;
        // Continues to run the program until user selects 4 which is quit
        while (progStatus < 4){
            // Will print this text to ask the user which equation they want to run
            if (progStatus == 0){
                System.out.println("Welcome to the power calculator");
                System.out.println("Would you like to..");
                System.out.println("1. Square a number");
                System.out.println("2. Cube a number");
                System.out.println("3. Choose your own exponent and base number");
                System.out.println("4. Quit");
                userOption = keyedInput.nextInt();
            }
            // This switch takes the input from the user and will turn it into a status number that will run an if statement 
            switch (userOption){
                case 1:
                    progStatus = 1;
                    break;
                case 2:
                    progStatus = 2;
                    break;
                case 3: 
                    progStatus = 3;
                    break;
                case 4:
                    progStatus = 4;
                    break;
                default:
                    System.out.println("Please enter a valid input (1, 2, 3, 4)");
                    userOption = keyedInput.nextInt();
                    break;
            }
            // These if statements are ran if the progStatus is equal to their number and will prompt the user to give numbers based on 
            // Based on the equation they asked for
            if (progStatus == 1){
                System.out.println("Please enter the number you would like to square");
                userOption = keyedInput.nextInt();
                userOption = userOption * userOption;
                System.out.println("Your product is " + userOption);
                progStatus = 0;
            }
            if (progStatus == 2){
                System.out.println("Please enter the number you would like to square");
                userOption = keyedInput.nextInt();
                userOption = userOption * userOption * userOption;
                System.out.println("Your product is " + userOption);
                progStatus = 0;
            }
            if (progStatus == 3){
                int base;
                int power;
                System.out.println("Please enter the base number you would like to power");
                userOption = keyedInput.nextInt();
                base = userOption;
                System.out.println("Please enter the exponent you would like to add to your base");
                userOption = keyedInput.nextInt();
                power = userOption;
                userOption = (int) Math.pow(base,power);
                System.out.println("Your product is " + userOption);
                progStatus = 0;
            }
        }
        // If the user selects to quit, it will not run the while loop and will skip over here which bids them farewell
        System.out.println("Have a nice day!");
    }
}